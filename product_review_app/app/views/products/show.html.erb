<div class="container">
<h1>Product Details</h1>

<p>Product Name: <%= @product.pName %> </p>
<p>Product Brand: <%= @product.pBrand %> </p>
<p>Product Cost: <%= @product.pCost %> </p>
<p>Product Category: <%= @product.pCategory %> </p>
<p>Product Date: <%= @product.pDate %> </p>
<p>Product Desription: <%= @product.pDescription %> </p>
<p>Product Photo: <%= @product.pPhoto %> </p>

<h2> Product Reviews </h2>
<%= link_to 'Add Review', new_review_path %> <br /> <br />
<table border="1" class="table">
<tr>
<th>Author</th>
<th>Product Rating</th>
<th>Review Text</th>
<th>Date of Review</th>
</tr>
<% @reviews.each do |review| %>
<tr>
<td align="center"><%= review.Author %> </td>
<td align="center"> <%= review.ProductRating %> </td>
<td> <%= review.ReviewText %> </td>
<td align="center"> <%= review.DateofReview %> </td>
<td> <%= link_to 'Review Page', review_path(review) %> </td>
<td> <%= link_to 'Edit Review', edit_review_path(review) %> </td>
<td> <%= link_to 'Delete Review', review_path(review),
method: :Delete,
data: {confirm: "Are you sure you want to delete this review?"} %> </td>
</tr>
<% end %>
</table>
</div>
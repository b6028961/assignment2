<div class="container">
<br />
<%= form_tag search_reviews_path, method: :get do %>
    <%= text_field_tag :term, nil, placeholder: 'Search Reviews', class: 'form-control' %>
    <%= submit_tag "Search", class: 'btn btn-default' %> 
    <% end %>
<h1> Reviews Available </h1>
<table border="1" class="table">
<tr>
<th>Product ID</th>
<th>Author</th>
<th>Product Rating</th>
<th>Review Text</th>
<th>Date of Review</th>
</tr>
<% @reviews.each do |review| %>
<tr>
<td> <%= review.ProductId %> </td>
<td> <%= review.Author %> </td>
<td> <%= review.ProductRating %> </td>
<td> <%= review.ReviewText %> </td>
<td> <%= review.DateofReview %> </td>
<td> <%= link_to 'Review Page', review_path(review) %> </td>
<td> <%= link_to 'Edit Review', edit_review_path(review) %> </td>
<td> <%= link_to 'Delete Review', review_path(review),
method: :Delete,
data: {confirm: "Are you sure you want to delete this review?"} %> </td>
</tr>
<% end %>
</table>
</div>